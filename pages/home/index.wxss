.hot{
  background-color: #fff;
}
.top-text{
  border-bottom: 1rpx solid #e6e6e6;
  padding: 23rpx 0rpx 23rpx 0rpx;
  font-size: 26rpx;
  background-color: #fff;
}
.top-text image{
  width: 23rpx;
  height: 23rpx;
  padding: 0rpx 12rpx 0rpx 27rpx;
}
.title-model{
  font-size: 28rpx;
}
.hot-grid{
  text-align: center;
  display: flex;
  flex-direction: row;
}
.hot-grid-list{
  flex: 1;
  font-size: 28rpx;
  border-right: 1rpx solid rgb(244, 244, 244);
  border-bottom: 1rpx solid rgb(244, 244, 244); 
  height: 190rpx;
  overflow: hidden;
  white-space: nowrap;    /*解决文字溢出*/
  text-overflow:ellipsis;
  padding-top: 20rpx;

}
.hot-grid-text{
  margin-left: 10rpx;
  margin-right: 10rpx;
}
.hot-grid-img{
  padding-bottom: 10rpx;
}
.hot-list-img{
  height: 120rpx;
  width: 200rpx;
  border-radius: 10rpx;
}
.nearby{
  margin-top: 30rpx;
}
.nearby-btnbox{
  background-color: #fff;
  /* text-align: center; */
  border-bottom: 1rpx solid #e6e6e6;
  display: flex; 
  flex-direction: row;
  padding: 0rpx 0rpx 0rpx 30rpx;
}
.nearby-btnbox-btn{
  /* flex: 1; */
  border: 5rpx solid #808080;
  border-radius: 60rpx;
  margin: 9rpx 0rpx 8rpx 20rpx; 
  font-size: 26rpx;
  color: #757575;
  height: 40rpx;
  font-weight: bord;
  line-height: 45rpx;
  padding: 0rpx 20rpx 0rpx 20rpx;
}
 .nearby-btnbox-btnSelected{
   border: 5rpx solid #A9A9A9;
